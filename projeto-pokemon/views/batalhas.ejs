<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Batalhas</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    .btn-back {
      position: absolute;
      top: 10px;
      left: 10px;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
    }
    .btn-back i {
      font-size: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Botão de Voltar -->
    <a href="http://localhost:3000/" class="btn btn-success btn-back">
      <i class="fas fa-arrow-left"></i>
    </a>
    
    <h1 class="text-primary text-center mt-5">Lista de Batalhas</h1>
    
    <!-- Formulário de Pesquisa -->
    <form method="get" action="/batalhas" class="mt-3">
      <input type="text" name="search" placeholder="Pesquisar Batalhas" class="form-control mb-3">
      <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
    
    <!-- Botão para Adicionar Nova Batalha -->
    <a href="/adicionar-batalha" class="btn btn-success mt-3">Adicionar Nova</a>
    
    <!-- Lista de Batalhas -->
    <ul class="list-group mt-3">
      <% batalhas.forEach((batalha) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            Data: <%= batalha.date %> | 
            Treinador 1: <%= batalha.treinador1 %> (Pokémon: <%= batalha.pokemon1 %>) 
            vs Treinador 2: <%= batalha.treinador2 %> (Pokémon: <%= batalha.pokemon2 %>) 
            | Vencedor: <%= batalha.vencedor %>
          </span>
          
          <div class="ml-auto">
            <!-- Botão para editar a batalha -->
            <a href="/editar-batalha/<%= batalha.id_batalha %>" class="btn btn-warning btn-sm">Editar</a>
            
            <!-- Formulário para excluir a batalha -->
            <form method="POST" action="/excluir-batalha/<%= batalha.id_batalha %>" class="d-inline">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
